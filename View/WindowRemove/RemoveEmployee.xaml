<Window x:Class="HR_Department.View.WindowRemove.RemoveEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HR_Department.View.WindowRemove"
        mc:Ignorable="d"
        Title="RemoveEmployee" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Margin="0,10,0,0">Выберети паспорт, который нужно удалить</Button>
            <Button Margin="0,10,0,0">Выберети трудовую книгу, которую нужно удалить</Button>
            <Button Margin="0,10,0,0">Выберети сотрудника, который нужно удалить</Button>
        </StackPanel>
        <Button Margin="35,8,35,8" Grid.Row="5" Content="Удалить приказ"/>
    </Grid>
</Window>
