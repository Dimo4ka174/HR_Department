<Window x:Class="HR_Department.View.WindowRemove.RemoveDepartment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HR_Department.View.WindowRemove"
        mc:Ignorable="d"
        Title="RemoveDepartment" Height="125" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button>Выберети кафедру, которую нужно удалить</Button>
        </StackPanel>
        <Button Margin="35,8,35,8" Grid.Row="2" Content="Удалить кафедру"/>
    </Grid>
</Window>
