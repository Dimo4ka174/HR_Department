<Window x:Class="HR_Department.View.WindowAdd.AddDepartment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HR_Department.View.WindowAdd"
        mc:Ignorable="d"
        Title="AddDepartment" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <TextBlock Margin="0,10,0,0" Text="Название кафедры"/>
            <TextBox Text=""/>
            <TextBlock Margin="0,10,0,0" Text="Специализация кафедры"/>
            <TextBox Text=""/>
            <Button Margin="0,10,0,0">+ Добавить сотрудника</Button>
        </StackPanel>
        <Button Margin="35,8,35,8" Grid.Row="5" Content="Добавить кафедру"/>
    </Grid>
</Window>
