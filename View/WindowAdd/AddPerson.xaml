<Window x:Class="HR_Department.View.WindowAdd.AddPerson"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HR_Department.View.WindowAdd"
        mc:Ignorable="d"
        Title="AddPerson" Height="350" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <TextBlock Margin="0,10,0,0" Text="Кафедра"/>
            <ComboBox/>
            <TextBlock Margin="0,10,0,0" Text="Паспорт"/>
            <ComboBox/>
            <TextBlock Margin="0,10,0,0" Text="Трудовая книга"/>
            <ComboBox/>
            <TextBlock Margin="0,10,0,0" Text="Должность"/>
            <ComboBox/>
            <TextBlock Margin="0,10,0,0" Text="Степень"/>
            <TextBox Text=""/>
            <TextBlock Margin="0,10,0,0" Text="Основной предмет"/>
            <TextBox Text=""/>
        </StackPanel>
        <Button Margin="35,8,35,8" Grid.Row="5" Content="Добавить сотрудника"/>
    </Grid>
</Window>
