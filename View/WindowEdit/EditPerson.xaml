<Window x:Class="HR_Department.View.WindowEdit.EditPerson"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HR_Department.View.WindowEdit"
        mc:Ignorable="d"
        Title="EditPerson" Height="350" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <TextBlock Text="Имя"/>
            <TextBox Text=""/>
            <TextBlock Text="Фамилия"/>
            <TextBox Text=""/>
            <TextBlock Text="Отчество"/>
            <TextBox Text=""/>
            <TextBlock Text="Серия и номер паспорта"/>
            <TextBox Text=""/>
            <TextBlock Text="Номер трудовой книжки"/>
            <TextBox Text=""/>
            <TextBlock Text="Кафедра"/>
            <ComboBox/>
            <TextBlock Text="Должность"/>
            <ComboBox/>
        </StackPanel>
        <Button Margin="35,8,35,8" Grid.Row="5" Content="Изменить сотрудника"/>
    </Grid>
</Window>
